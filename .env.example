# =============================================================================
# Monorepo shared environment
# Copy this file to .env at the repo root.
# =============================================================================

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
PORT=3000
DATABASE_URL=tuning-movie.db
AGENT_RELAY_LOG_ENABLED=false

# -----------------------------------------------------------------------------
# Frontend (Vite)
# -----------------------------------------------------------------------------
VITE_API_URL=
VITE_AGENT_WS_URL=ws://localhost:3000/agent/ws
VITE_AGENT_SESSION_ID=default
VITE_MONITOR_API_BASE=/monitor-api

# -----------------------------------------------------------------------------
# Tuning Agent (TypeScript)
# -----------------------------------------------------------------------------
AGENT_RELAY_URL=ws://localhost:3000/agent/ws
AGENT_SESSION_ID=default
AGENT_STUDY_ID=pilot-01
AGENT_PARTICIPANT_ID=P01

# OpenAI (optional — set AGENT_ENABLE_OPENAI=true to use)
OPENAI_API_KEY=
AGENT_OPENAI_MODEL=gpt-5.2
AGENT_ENABLE_OPENAI=true

# Gemini (optional — set AGENT_ENABLE_GEMINI=true to use)
GEMINI_API_KEY=
AGENT_GEMINI_MODEL=gemini-2.5-flash
AGENT_ENABLE_GEMINI=false

# Agent debug & monitor
AGENT_LLM_DEBUG=false
AGENT_MONITOR_PORT=3500
